<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tatlicilar.proje.KayitOl">

    <ImageView
        android:id="@+id/resim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ad"
        android:layout_marginStart="56dp"
        android:layout_below="@+id/resim"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/soyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Soyad"
        android:layout_below="@+id/ad"
        android:layout_alignStart="@+id/ad" />

    <EditText
        android:id="@+id/sifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/soyad"
        android:layout_alignStart="@+id/soyad" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/sifre"
        android:layout_alignStart="@+id/sifre" />

    <EditText
        android:id="@+id/dtarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />

    <Button
        android:id="@+id/tarihSec"
        android:text="Tarih SeÃ§"
        android:layout_below="@+id/dtarih"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_above="@+id/explv1"
        android:layout_alignStart="@+id/dtarih"
        android:layout_toStartOf="@+id/resim" />

    <Button
        android:id="@+id/kaydol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ExpandableListView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:id="@+id/explv1"
        android:layout_above="@+id/kaydol"
        android:layout_alignStart="@+id/tarihSec" />

</RelativeLayout>
